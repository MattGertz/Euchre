<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>CSEuchre4</RootNamespace>
    <AssemblyName>CSEuchre4</AssemblyName>
    <ApplicationIcon>Images\Euchre.ico</ApplicationIcon>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    
    <!-- Suppress Windows-only API warnings (this is a Windows-only WPF app) -->
    <NoWarn>CA1416</NoWarn>
    
    <!-- Assembly metadata -->
    <AssemblyTitle>C# Euchre</AssemblyTitle>
    <Product>CSEuchre4</Product>
    <Description>A Euchre game written in C# by Matthew Gertz</Description>
    <Company>Where's That Cat? software</Company>
    <Copyright>Copyright © Matthew Gertz. All rights reserved.</Copyright>
    <Version>1.0.0.0</Version>
    
    <!-- Suppress auto-generated assembly attributes since we have AssemblyInfo.cs -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="9.0.0" />
    <PackageReference Include="System.Speech" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Copy text files to output directory -->
    <None Update="text\CSEuchreRules.rtf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    
    <!-- Copy sound files to output directory -->
    <None Update="sounds\*.wav">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- All image resources are automatically included as Resource -->
    <Resource Include="Images\**\*" />
    <Resource Include="Resources\**\*" />
  </ItemGroup>
</Project>